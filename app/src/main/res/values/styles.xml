<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Toolbar.TitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#F2EFF5</item>
    </style>
    <style name="PaymentStatus" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#5EC08F</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic|bold</item>
    </style>



</resources>